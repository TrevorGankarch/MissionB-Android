<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dwarsoft.blooddonorapp.notify">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"

        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="EMERGENCY NOTIFICATION"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="17dp"
            />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20dp"
        android:id="@+id/cv1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp">

        <Button
            android:id="@+id/button2"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:onClick="allblood"
            android:text="NOTIFY ALL BLOOD BANK WITHIN CITY LIMITS" />

        <Button
            android:id="@+id/button5"
            android:onClick="within3km"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="70dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SEND WITHIN 3KM BLOOD BANK" />

        <Button
            android:id="@+id/button4"
            android:onClick="alluser"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="70dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="NOTIFY ALL USERS WITHIN CITY" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
