<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/showrecycler"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/showcard"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="15dp"
            android:src="@color/colorPrimary"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/showname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="20dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showage"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="20dp"
            android:text="Age"
            android:textColor="#000000"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/showblood"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="20dp"
            android:text="Blood Group"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showunits"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="20dp"
            android:text="Units"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/showaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@+id/img"
            android:padding="5dp"
            android:paddingLeft="20dp"
            android:text="Address"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/showphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="194dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="2dp"
            android:text="Phone"
            android:textColor="#000000"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/showdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="20dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/showshare"
            android:onClick="shareeee"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/showphone"
            android:layout_marginStart="180dp"
            android:layout_marginTop="220dp"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:text="SHARE"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/showhelp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/img"
            android:layout_marginStart="2dp"
            android:layout_marginTop="220dp"
            android:layout_toLeftOf="@+id/showaddress"
            android:layout_toStartOf="@+id/showaddress"
            android:background="@color/colorPrimaryDark"
            android:onClick="showhelp"
            android:text="SEND MY DETAILS"
            android:textColor="#FFFFFF" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
